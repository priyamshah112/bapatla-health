<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.droiduino.companionappcourse">

    <!-- Permissions for Bluetooth access -->
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".SelectDeviceActivity"></activity>
        <activity android:name=".CallSupport"
            android:parentActivityName=".MainActivity"></activity>
        <activity android:name=".SuccessfulThermometerPairing"
            android:parentActivityName=".MainActivity"></activity>
        <activity android:name=".UnsuccessfulThermometerPairing"
            android:parentActivityName=".MainActivity"></activity>
        <activity android:name=".DeviceSetup1"
            android:parentActivityName=".MainActivity"></activity>
        <activity android:name=".SplashScreen"
            android:parentActivityName=".MainActivity"></activity>
        <activity android:name=".DeviceSetup2"
            android:parentActivityName=".MainActivity"></activity>
        <activity android:name=".ForgotPassword"
            android:parentActivityName=".MainActivity"></activity>
        <activity android:name=".Login"
            android:parentActivityName=".MainActivity"></activity>
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>