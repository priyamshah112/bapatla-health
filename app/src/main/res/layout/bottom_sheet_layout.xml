<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/bottom_sheet_rounded">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Selection Duration"
            android:fontFamily="@font/attenroundnewbook"
            android:textColor="@android:color/black"
            android:gravity="center_horizontal"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/closeBottomSheet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_cancel_24"
            android:layout_alignParentEnd="true"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="#f8f8f8"/>

    <RadioGroup
        android:id="@+id/gender_radio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/view_below"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:checkedButton="@+id/hours24">

        <RadioButton
            android:id="@+id/hours24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Past 24 Hours"
            android:fontFamily="@font/attenroundnewbook"
            android:textSize="16sp"
            android:textStyle="bold"
            android:buttonTint="@color/colorPrimary" />

        <RadioButton
            android:id="@+id/days7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Past 7 days"
            android:fontFamily="@font/attenroundnewbook"
            android:textSize="16sp"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:buttonTint="@color/colorPrimary" />

        <RadioButton
            android:id="@+id/days14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Past 14 days"
            android:fontFamily="@font/attenroundnewbook"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:buttonTint="@color/colorPrimary"/>

        <RadioButton
            android:id="@+id/days30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Past 30 days"
            android:fontFamily="@font/attenroundnewbook"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:buttonTint="@color/colorPrimary"/>

    </RadioGroup>

</LinearLayout>