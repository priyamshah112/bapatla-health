<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Prescription">

<!--    <ScrollView-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="match_parent"-->
<!--        tools:layout_editor_absoluteX="0dp"-->
<!--        tools:layout_editor_absoluteY="259dp">-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Medication"
                    android:textSize="31sp"
                    android:gravity="left"
                    android:layout_marginStart="10dp"
                    android:textColor="@android:color/black"
                    android:fontFamily="@font/attenroundnewbook"
                    android:textStyle="bold"
                    android:layout_marginTop="25.5dp"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:background="@android:color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="Doctor Name"
                android:layout_marginTop="15dp"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:fontFamily="@font/attenroundnewbook"
                android:textStyle="bold"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="7.5dp"
                android:background="@drawable/rounded_corners"
                android:drawableLeft="@drawable/account_icon"
                android:fontFamily="@font/attenroundnewbook"
                android:hint="@string/prescription_doctor_name"
                android:inputType="text"
                android:textAlignment="textStart"
                android:textColor="@color/colorPrimary"
                android:textColorHint="@color/colorPrimary"
                android:textSize="14sp" />

            <RadioGroup
                android:id="@+id/radio_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/view_below"
                android:layout_marginTop="12dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/radio1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="29dp"
                    android:layout_weight="1"
                    android:text="  MBBS"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <RadioButton
                    android:id="@+id/radio2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="0dp"
                    android:layout_weight="1"
                    android:text="  MD"
                    android:textSize="17sp"
                    android:textStyle="bold" />

            </RadioGroup>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="13dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date"
                    android:fontFamily="@font/attenroundnewbook"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:layout_marginStart="11.5dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Time"
                    android:fontFamily="@font/attenroundnewbook"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:layout_marginStart="154dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/rounded_corners"
                android:layout_marginStart="11dp"
                android:layout_marginTop="7.5dp">

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="56dp"
                    android:background="@drawable/rounded_corners"
                    android:drawableLeft="@drawable/login_password_icon"
                    android:fontFamily="@font/attenroundnewbook"
                    android:hint="@string/doctor_date"
                    android:inputType="text"
                    android:textAlignment="textStart"
                    android:textColor="@android:color/black"
                    android:textColorHint="@android:color/black"
                    android:textSize="17sp" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="56dp"
                    android:layout_marginStart="19dp"
                    android:background="@drawable/rounded_corners"
                    android:drawableLeft="@drawable/login_password_icon"
                    android:fontFamily="@font/attenroundnewbook"
                    android:hint="@string/doctor_time"
                    android:inputType="text"
                    android:textAlignment="textStart"
                    android:textColor="@android:color/black"
                    android:textColorHint="@android:color/black"
                    android:textSize="17sp" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Medication Name"
                android:fontFamily="@font/attenroundnewbook"
                android:textSize="16sp"
                android:layout_marginTop="12.5dp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_marginStart="11.5dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="7.5dp"
                android:background="@drawable/rounded_corners"
                android:drawableLeft="@drawable/account_icon"
                android:fontFamily="@font/attenroundnewbook"
                android:hint="@string/prescription_medication_name"
                android:inputType="text"
                android:textAlignment="textStart"
                android:textColor="@color/colorPrimary"
                android:textColorHint="@color/colorPrimary"
                android:textSize="14sp" />

            <Switch
                android:id="@+id/simpleSwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:layout_marginStart="11.5dp"
                android:fontFamily="@font/attenroundnewbook"
                android:textSize="16sp"
                android:layout_marginTop="12.5dp"
                android:text="Set Reminder For Next Follow up                             "
                android:textOn="On"
                android:textOff="Off"
                android:theme="@style/SwitchTheme"
                android:textStyle="bold"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dialog_btn"
                android:text="Reminder Modal"
                android:onClick=""
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="1"
                android:gravity="center|bottom"
                android:orientation="vertical" >

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="56dp"
                    android:layout_gravity="center|bottom"
                    android:layout_marginStart="11dp"
                    android:layout_marginEnd="11dp"
                    android:background="@drawable/rounded_corner_button"
                    android:fontFamily="@font/attenroundnewbook"
                    android:text="Save"
                    android:layout_marginBottom="10dp"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

<!--    </ScrollView>-->

</androidx.constraintlayout.widget.ConstraintLayout>

