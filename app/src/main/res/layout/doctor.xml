<?xml version="1.0" encoding="utf-8"?>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Doctor">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="259dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="22.5dp"
            android:layout_marginEnd="22.5dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="22dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date"
                    android:fontFamily="@font/attenroundnewbook"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:layout_marginStart="11.5dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Time"
                    android:fontFamily="@font/attenroundnewbook"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:layout_marginStart="154dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/rounded_corners"
                android:layout_marginStart="11dp"
                android:layout_marginTop="7.5dp">

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="56dp"
                    android:background="@drawable/rounded_corners"
                    android:drawableLeft="@drawable/login_password_icon"
                    android:fontFamily="@font/attenroundnewbook"
                    android:hint="@string/doctor_date"
                    android:inputType="text"
                    android:textAlignment="textStart"
                    android:textColor="@android:color/black"
                    android:textColorHint="@android:color/black"
                    android:textSize="17sp" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="56dp"
                    android:layout_marginStart="19dp"
                    android:background="@drawable/rounded_corners"
                    android:drawableLeft="@drawable/login_password_icon"
                    android:fontFamily="@font/attenroundnewbook"
                    android:hint="@string/doctor_time"
                    android:inputType="text"
                    android:textAlignment="textStart"
                    android:textColor="@android:color/black"
                    android:textColorHint="@android:color/black"
                    android:textSize="17sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/rounded_corners"
                android:layout_marginStart="11dp"
                android:layout_marginTop="22dp">

                <CheckBox
                    android:id="@+id/checkBox1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:buttonTint="@color/colorPrimary"
                    android:text="  Common Cold"
                    android:fontFamily="@font/attenroundnewbook"
                    android:layout_marginStart="11dp"
                    android:layout_marginTop="15dp"
                    android:textSize="18sp"/>

                <CheckBox
                    android:id="@+id/checkBox2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:buttonTint="@color/colorPrimary"
                    android:text="  FLU(also called Influenza)"
                    android:fontFamily="@font/attenroundnewbook"
                    android:layout_marginStart="11dp"
                    android:textSize="18sp"/>

                <CheckBox
                    android:id="@+id/checkBox3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:buttonTint="@color/colorPrimary"
                    android:text="  Coronavirus"
                    android:fontFamily="@font/attenroundnewbook"
                    android:layout_marginStart="11dp"
                    android:textSize="18sp"/>

                <CheckBox
                    android:id="@+id/checkBox4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:buttonTint="@color/colorPrimary"
                    android:text="  Viral fever"
                    android:fontFamily="@font/attenroundnewbook"
                    android:layout_marginStart="11dp"
                    android:textSize="18sp"/>

                <CheckBox
                    android:id="@+id/checkBox5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:buttonTint="@color/colorPrimary"
                    android:text="  Dengue"
                    android:fontFamily="@font/attenroundnewbook"
                    android:layout_marginStart="11dp"
                    android:textSize="18sp"/>

                <CheckBox
                    android:id="@+id/checkBox6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:buttonTint="@color/colorPrimary"
                    android:text="  Malaria"
                    android:fontFamily="@font/attenroundnewbook"
                    android:layout_marginStart="11dp"
                    android:textSize="18sp"/>

                <CheckBox
                    android:id="@+id/checkBox7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:buttonTint="@color/colorPrimary"
                    android:text="  Chikungunya"
                    android:fontFamily="@font/attenroundnewbook"
                    android:layout_marginStart="11dp"
                    android:textSize="18sp"/>

                <CheckBox
                    android:id="@+id/checkBox8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:buttonTint="@color/colorPrimary"
                    android:text="  Typhoid feverÂ "
                    android:fontFamily="@font/attenroundnewbook"
                    android:layout_marginStart="11dp"
                    android:textSize="18sp"/>

                <CheckBox
                    android:id="@+id/checkBox9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:buttonTint="@color/colorPrimary"
                    android:text="  Pneumonia"
                    android:fontFamily="@font/attenroundnewbook"
                    android:layout_marginStart="11dp"
                    android:textSize="18sp"/>

                <CheckBox
                    android:id="@+id/checkBox10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:buttonTint="@color/colorPrimary"
                    android:text="  Tuberculosis"
                    android:fontFamily="@font/attenroundnewbook"
                    android:layout_marginStart="11dp"
                    android:textSize="18sp"/>

                <CheckBox
                    android:id="@+id/checkBox11"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:buttonTint="@color/colorPrimary"
                    android:text="  Diarrheal Disease"
                    android:fontFamily="@font/attenroundnewbook"
                    android:layout_marginStart="11dp"
                    android:textSize="18sp"/>

                <CheckBox
                    android:id="@+id/checkBox12"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:buttonTint="@color/colorPrimary"
                    android:text="  Chicken pox"
                    android:fontFamily="@font/attenroundnewbook"
                    android:layout_marginStart="11dp"
                    android:textSize="18sp"/>

                <CheckBox
                    android:id="@+id/checkBox13"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:buttonTint="@color/colorPrimary"
                    android:text="  Heat Stroke"
                    android:fontFamily="@font/attenroundnewbook"
                    android:layout_marginStart="11dp"
                    android:textSize="18sp"/>

            </LinearLayout>

            <Button
                android:layout_width="fill_parent"
                android:layout_height="56dp"
                android:layout_gravity="center|bottom"
                android:layout_marginTop="30dp"
                android:layout_marginStart="11dp"
                android:layout_marginEnd="11dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/rounded_corner_button"
                android:fontFamily="@font/attenroundnewbook"
                android:text="Save"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>