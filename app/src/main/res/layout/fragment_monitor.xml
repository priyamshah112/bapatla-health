<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MonitorFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="2dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:background="?attr/colorPrimary"
            android:minHeight="?attr/actionBarSize"
            app:layout_scrollFlags="scroll|enterAlways">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MONITOR"
                    android:textSize="24dp"
                    android:textColor="@android:color/white"
                    android:fontFamily="@font/attenroundnewbook"
                    android:layout_marginTop="11.5dp"
                    />

                <Button
                    android:id="@+id/homeFragmentUsername"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:background="@drawable/header_btn"
                    android:drawableLeft="@drawable/header_person_icon"
                    android:text="Chomo"
                    android:layout_alignParentEnd="true"
                    android:textColor="@android:color/white"
                    android:fontFamily="@font/attenroundnewregular"
                    android:textSize="16sp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="11dp"
                    android:drawableRight="@drawable/homepage_dropdown_icon"/>

            </RelativeLayout>



        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>


    <ScrollView
        android:layout_marginTop="49dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-127dp">
        <!--Scrollable content here-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="22dp"
            android:layout_marginTop="46dp"
            android:layout_marginEnd="22dp" >

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="135dp"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill_horizontal"
                    android:background="@drawable/rounded_corners"
                    android:layout_marginRight="3dp"
                    android:orientation="vertical"
                    android:layout_marginBottom="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Daily Report"
                        android:textAlignment="center"
                        android:textSize="24sp"
                        android:textColor="@color/colorPrimary"
                        android:fontFamily="@font/attenroundnewregular"
                        android:layout_marginTop="10dp"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="72dp"
                        android:src="@drawable/chart"
                        android:layout_marginTop="6.66dp"
                        android:layout_gravity="center"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="135dp"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill_horizontal"
                    android:orientation="vertical"
                    android:background="@drawable/rounded_corners"
                    android:layout_marginLeft="3dp"
                    android:layout_marginBottom="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Daily Stats"
                        android:textAlignment="center"
                        android:textSize="24sp"
                        android:textColor="@color/colorPrimary"
                        android:fontFamily="@font/attenroundnewregular"
                        android:layout_marginTop="10dp"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="72dp"
                        android:src="@drawable/stats"
                        android:layout_marginTop="6.66dp"
                        android:layout_gravity="center"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/dailyTrendButton"
                    android:layout_width="0dp"
                    android:layout_height="135dp"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill_horizontal"
                    android:background="@drawable/rounded_corners"
                    android:orientation="vertical"
                    android:layout_marginRight="3dp"
                    android:layout_marginBottom="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Daily Trend"
                        android:textAlignment="center"
                        android:textSize="24sp"
                        android:textColor="@color/colorPrimary"
                        android:fontFamily="@font/attenroundnewregular"
                        android:layout_marginTop="10dp"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="72dp"
                        android:src="@drawable/timeline"
                        android:layout_marginTop="6.66dp"
                        android:layout_gravity="center"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="135dp"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill_horizontal"
                    android:orientation="vertical"
                    android:background="@drawable/rounded_corners"
                    android:layout_marginLeft="3dp"
                    android:layout_marginBottom="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Track Health"
                        android:textAlignment="center"
                        android:textSize="24sp"
                        android:textColor="@color/colorPrimary"
                        android:fontFamily="@font/attenroundnewregular"
                        android:layout_marginTop="10dp"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="72dp"
                        android:src="@drawable/heart"
                        android:layout_marginTop="6.66dp"
                        android:layout_gravity="center"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="135dp"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill_horizontal"
                    android:background="@drawable/rounded_corners"
                    android:layout_marginRight="3dp"
                    android:orientation="vertical"
                    android:layout_marginBottom="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Seek Advice"
                        android:textAlignment="center"
                        android:textSize="24sp"
                        android:textColor="@color/colorPrimary"
                        android:fontFamily="@font/attenroundnewregular"
                        android:layout_marginTop="10dp"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="72dp"
                        android:src="@drawable/sthetoscope"
                        android:layout_marginTop="6.66dp"
                        android:layout_gravity="center"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/callSupportButton"
                    android:layout_width="0dp"
                    android:layout_height="135dp"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill_horizontal"
                    android:background="@drawable/rounded_corners"
                    android:layout_marginLeft="3dp"
                    android:orientation="vertical"
                    android:layout_marginBottom="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Call Support"
                        android:textAlignment="center"
                        android:textSize="24sp"
                        android:textColor="@color/colorPrimary"
                        android:fontFamily="@font/attenroundnewregular"
                        android:layout_marginTop="10dp"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="72dp"
                        android:src="@drawable/call_support"
                        android:layout_marginTop="6.66dp"
                        android:layout_gravity="center"/>

                </LinearLayout>

            </GridLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>