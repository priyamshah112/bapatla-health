<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Prescription">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="259dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="27.5dp"
                android:layout_marginEnd="27.5dp"
                android:background="@drawable/rounded_corners_teal_color"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/mild_fever"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="37dp"
                    android:layout_gravity="center"/>

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginStart="13dp"
                android:layout_marginEnd="9dp"
                android:background="@drawable/rounded_corners"
                android:orientation="vertical">

                <com.google.android.flexbox.FlexboxLayout
                    android:id="@+id/flexboxlayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:flexDirection="row"
                    app:flexWrap="wrap"
                    android:layout_marginTop="9dp"
                    android:layout_marginBottom="9dp"
                    app:justifyContent="flex_start"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginStart="13dp"
                android:layout_marginEnd="9dp"
                android:background="@drawable/rounded_corners"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:text="You have symptoms of COVID-19. You must self- isolate at home and arrange to have a test to see if you have COVID-19."
                    android:textColor="@android:color/black"
                    android:textSize="15sp"
                    android:layout_marginTop="8.5dp"
                    android:fontFamily="@font/attenroundnewregular"
                    android:lineSpacingExtra="7dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:text="For a covid-19 medical assistance, you should ring 104. To help prevent the spread at home, wash-hands regularly and dis-infect surfaces. "
                    android:textColor="@android:color/black"
                    android:textSize="15sp"
                    android:layout_marginTop="30dp"
                    android:fontFamily="@font/attenroundnewregular"
                    android:lineSpacingExtra="7dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:text="If your test result is negative"
                    android:textColor="@android:color/black"
                    android:textSize="15sp"
                    android:layout_marginTop="35dp"
                    android:fontFamily="@font/attenroundnewbold"
                    android:lineSpacingExtra="7dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:text="You can end self-isolation immediately. "
                    android:textColor="@android:color/black"
                    android:textSize="15sp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/attenroundnewregular"
                    android:lineSpacingExtra="7dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:text="If your test result is positive"
                    android:textColor="@android:color/black"
                    android:textSize="15sp"
                    android:layout_marginTop="35dp"
                    android:fontFamily="@font/attenroundnewbold"
                    android:lineSpacingExtra="7dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:text="You must ensure you remain at home and complete the self-isolation period of at least 14 days from when your symptoms started."
                    android:textColor="@android:color/black"
                    android:textSize="15sp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/attenroundnewregular"
                    android:lineSpacingExtra="7dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:text="For a medical emergency, you should ring 144."
                    android:textColor="@android:color/black"
                    android:textSize="15sp"
                    android:layout_marginTop="30dp"
                    android:fontFamily="@font/attenroundnewregular"
                    android:lineSpacingExtra="7dp" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
