<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DeviceSetup2">

    <!--    <ScrollView-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="match_parent"-->
    <!--        tools:layout_editor_absoluteX="0dp"-->
    <!--        tools:layout_editor_absoluteY="-127dp">-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="220dp"
            android:src="@drawable/thermo_bluetooth_mobile"
            android:layout_marginTop="28dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hi Chomo, let's get you ready!"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textSize="24sp"
            android:layout_marginStart="24.5dp"
            android:layout_marginTop="10.98dp"
            android:layout_marginEnd="24.5dp"
            android:textColor="@color/colorPrimary"
            android:layout_weight="0"
            android:fontFamily="@font/attenroundnewregular" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="35dp"
            android:layout_marginEnd="17dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:src="@drawable/bluetooth_icon"
                android:layout_weight="0.1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bluetooth"
                android:textAlignment="textStart"
                android:layout_marginLeft="8.5dp"
                android:textSize="20sp"
                android:textColor="@android:color/black"
                android:layout_weight="0.8"
                android:fontFamily="@font/attenroundnewbook"/>

            <ImageView
                android:layout_width="78dp"
                android:layout_height="24dp"
                android:layout_gravity="end"
                android:layout_marginRight="17dp"
                android:src="@drawable/on"
                android:layout_weight="0.1"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="29dp"
            android:layout_marginTop="8.68dp"
            android:text="Please Enable Bluetooth Service"
            android:textAlignment="textStart"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:fontFamily="@font/attenroundnewbook" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="50.32dp"
            android:layout_marginEnd="17dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:src="@drawable/location_icon"
                android:layout_weight="0.1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Location"
                android:textAlignment="textStart"
                android:layout_marginLeft="8.5dp"
                android:textSize="20sp"
                android:textColor="@android:color/black"
                android:layout_weight="0.8"
                android:fontFamily="@font/attenroundnewbook"/>

            <ImageView
                android:layout_width="78dp"
                android:layout_height="24dp"
                android:layout_gravity="end"
                android:layout_marginRight="17dp"
                android:src="@drawable/on"
                android:layout_weight="0.1"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="29dp"
            android:layout_marginTop="8.68dp"
            android:text="Please Enable Location Service"
            android:textAlignment="textStart"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:fontFamily="@font/attenroundnewbook" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:gravity="center|bottom"
            android:orientation="vertical" >

            <Button
                android:layout_height="56dp"
                android:layout_width="fill_parent"
                android:background="@drawable/rounded_corner_button"
                android:textColor="@android:color/white"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="17dp"
                android:layout_marginBottom="10dp"
                android:textSize="16sp"
                android:text="Next"
                android:layout_gravity="center|bottom"
                android:fontFamily="@font/attenroundnewbook"/>

        </LinearLayout>

    </LinearLayout>
    <!--    </ScrollView>-->

</androidx.constraintlayout.widget.ConstraintLayout>