<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Covid19AEFI3">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="259dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="17dp"
            android:layout_marginRight="17dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="10dp"
                android:layout_weight="0"
                android:fontFamily="@font/attenroundnewbook"
                android:text="Outcome"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/rounded_corners"
                android:layout_marginTop="17.5dp">

                <CheckBox
                    android:id="@+id/checkBox1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:buttonTint="@color/colorPrimary"
                    android:text="  Recovering"
                    android:textStyle="bold"
                    android:layout_marginStart="11.5dp"
                    android:layout_marginTop="11dp"
                    android:textSize="14sp"
                    android:fontFamily="@font/attenroundnewbook"/>

                <CheckBox
                    android:id="@+id/checkBox2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:buttonTint="@color/colorPrimary"
                    android:text="  Recovered"
                    android:textStyle="bold"
                    android:layout_marginStart="11.5dp"
                    android:textSize="14sp"
                    android:fontFamily="@font/attenroundnewbook"/>

                <CheckBox
                    android:id="@+id/checkBox3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:buttonTint="@color/colorPrimary"
                    android:text="  Recovered with sequelae"
                    android:layout_marginStart="11.5dp"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:fontFamily="@font/attenroundnewbook"/>

                <CheckBox
                    android:id="@+id/checkBox4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:buttonTint="@color/colorPrimary"
                    android:text="  Not recovered"
                    android:textStyle="bold"
                    android:layout_marginStart="11.5dp"
                    android:textSize="14sp"
                    android:fontFamily="@font/attenroundnewbook"/>

                <CheckBox
                    android:id="@+id/checkBox5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:buttonTint="@color/colorPrimary"
                    android:text="  Unknown"
                    android:textStyle="bold"
                    android:layout_marginStart="11.5dp"
                    android:textSize="14sp"
                    android:fontFamily="@font/attenroundnewbook"/>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="20dp"
                android:layout_weight="0"
                android:textStyle="bold"
                android:fontFamily="@font/attenroundnewbook"
                android:text="Reporter's Name"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/reporters_name"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="17dp"
                android:background="@drawable/rounded_corners"
                android:drawableLeft="@drawable/account_icon"
                android:fontFamily="@font/attenroundnewbook"
                android:hint="@string/aefi_reporters_name"
                android:inputType="text"
                android:textAlignment="textStart"
                android:textColor="@color/colorPrimary"
                android:textColorHint="@color/colorPrimary"
                android:textSize="14sp"
                android:textCursorDrawable = "@null"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="20dp"
                android:layout_weight="0"
                android:textStyle="bold"
                android:fontFamily="@font/attenroundnewbook"
                android:text="Reporter's Designation"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/reporters_designation"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="17dp"
                android:background="@drawable/rounded_corners"
                android:drawableLeft="@drawable/account_icon"
                android:fontFamily="@font/attenroundnewbook"
                android:hint="@string/aefi_reporters_designation"
                android:inputType="text"
                android:textAlignment="textStart"
                android:textColor="@color/colorPrimary"
                android:textColorHint="@color/colorPrimary"
                android:textSize="14sp"
                android:textCursorDrawable = "@null"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="20dp"
                android:layout_weight="0"
                android:textStyle="bold"
                android:fontFamily="@font/attenroundnewbook"
                android:text="Reporter's Mobile Number"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/reporters_mobile_no"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="17dp"
                android:background="@drawable/rounded_corners"
                android:drawableLeft="@drawable/phone_icon"
                android:fontFamily="@font/attenroundnewbook"
                android:hint="@string/aefi_reporters_mobile_no"
                android:inputType="text"
                android:textAlignment="textStart"
                android:textColor="@color/colorPrimary"
                android:textColorHint="@color/colorPrimary"
                android:textSize="14sp"
                android:textCursorDrawable = "@null"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="20dp"
                android:layout_weight="0"
                android:textStyle="bold"
                android:fontFamily="@font/attenroundnewbook"
                android:text="Reporter's Address"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/reporters_address"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="17dp"
                android:background="@drawable/rounded_corners"
                android:drawableLeft="@drawable/home_icon"
                android:fontFamily="@font/attenroundnewbook"
                android:hint="@string/aefi_reporters_address"
                android:inputType="text"
                android:textAlignment="textStart"
                android:textColor="@color/colorPrimary"
                android:textColorHint="@color/colorPrimary"
                android:textSize="14sp"
                android:textCursorDrawable = "@null"/>

            <Button
                android:id="@+id/covid19aefi3submitbutton"
                android:layout_width="fill_parent"
                android:layout_height="56dp"
                android:layout_gravity="center|bottom"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="50dp"
                android:background="@drawable/rounded_corner_button"
                android:fontFamily="@font/attenroundnewbook"
                android:text="Submit"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>