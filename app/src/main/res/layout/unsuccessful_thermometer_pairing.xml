<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SuccessfulThermometerPairing">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-127dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="117dp"
                android:layout_height="96dp"
                android:src="@drawable/warning"
                android:layout_gravity="center"
                android:layout_marginTop="59dp"/>

            <ImageView
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:src="@drawable/temperature_range"
                android:layout_gravity="center"
                android:layout_marginTop="28dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thermometer not detected"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginStart="18.5dp"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="18.5dp"
                android:textColor="@color/colorPrimary"
                android:layout_weight="0"
                android:fontFamily="@font/attenroundnewregular" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="One of the following has occured"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginStart="18.5dp"
                android:layout_marginEnd="18.5dp"
                android:textColor="@color/colorPrimary"
                android:layout_weight="0"
                android:fontFamily="@font/attenroundnewregular" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="25dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="20dp"
                    android:src="@drawable/tick2"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thermometer is not turned on"
                    android:textAlignment="textStart"
                    android:textSize="14sp"
                    android:layout_marginStart="10dp"
                    android:textColor="@android:color/black"
                    android:layout_weight="0"
                    android:fontFamily="@font/attenroundnewbook" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="25dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="20dp"
                    android:src="@drawable/tick2"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thermometer battery has died"
                    android:textAlignment="textStart"
                    android:textSize="14sp"
                    android:layout_marginStart="10dp"
                    android:textColor="@android:color/black"
                    android:layout_weight="0"
                    android:fontFamily="@font/attenroundnewbook" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="25dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="20dp"
                    android:src="@drawable/tick2"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="You are out of Bluetooth range. Make sure your device and thermometer are within 30 feet of distance."
                    android:textAlignment="textStart"
                    android:textSize="14sp"
                    android:layout_marginStart="10dp"
                    android:textColor="@android:color/black"
                    android:layout_weight="0"
                    android:fontFamily="@font/attenroundnewbook"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="25dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="20dp"
                    android:src="@drawable/tick2"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Connection has been lost"
                    android:textAlignment="textStart"
                    android:textSize="14sp"
                    android:layout_marginStart="10dp"
                    android:textColor="@android:color/black"
                    android:layout_weight="0"
                    android:fontFamily="@font/attenroundnewbook"/>
            </LinearLayout>

            <Button
                android:layout_height="60dp"
                android:layout_width="fill_parent"
                android:background="@drawable/rounded_corner_button"
                android:textColor="@android:color/white"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:textSize="16sp"
                android:text="Try Again"
                android:layout_gravity="center|bottom"
                android:fontFamily="@font/attenroundnewbook"/>

    <!--        <LinearLayout-->
    <!--            android:layout_width="match_parent"-->
    <!--            android:layout_height="0dip"-->
    <!--            android:layout_weight="1"-->
    <!--            android:gravity="center|bottom"-->
    <!--            android:orientation="vertical" >-->

    <!--            <Button-->
    <!--                android:layout_height="60dp"-->
    <!--                android:layout_width="fill_parent"-->
    <!--                android:background="@drawable/rounded_corner_button"-->
    <!--                android:textColor="@android:color/white"-->
    <!--                android:layout_marginTop="10dp"-->
    <!--                android:layout_marginBottom="10dp"-->
    <!--                android:text="Start Measuring"-->
    <!--                android:layout_gravity="center|bottom"/>-->

    <!--        </LinearLayout>-->

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>