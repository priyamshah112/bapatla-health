<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Travel">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="259dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="55.5dp"
                android:layout_marginEnd="55.5dp"
                android:text="Please enter the social interactionand travel data."
                android:textSize="24sp"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:fontFamily="@font/attenroundnewbook"
                android:textStyle="bold"
                android:layout_marginTop="16.5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="27.5dp"
                android:text="Social interactions"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:fontFamily="@font/attenroundnewbook"
                android:textStyle="bold"
                android:layout_marginTop="31dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/rounded_corners"
                android:layout_marginStart="27dp"
                android:layout_marginEnd="26dp"
                android:layout_marginTop="5.5dp">

                <CheckBox
                    android:id="@+id/checkBox14"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:buttonTint="@color/colorPrimary"
                    android:text="  Have you tested covid-19 positive prior to\n  vaccine"
                    android:fontFamily="@font/attenroundnewbook"
                    android:layout_marginStart="11.5dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="11.5dp"
                    android:textSize="14sp"/>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="27.5dp"
                android:text="Work environment"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:fontFamily="@font/attenroundnewbook"
                android:textStyle="bold"
                android:layout_marginTop="22.5dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/rounded_corners"
                android:layout_marginStart="27dp"
                android:layout_marginEnd="26dp"
                android:layout_marginTop="5.5dp">

                <CheckBox
                    android:id="@+id/checkBox15"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:buttonTint="@color/colorPrimary"
                    android:text="  Work in the medical facilty"
                    android:fontFamily="@font/attenroundnewbook"
                    android:layout_marginStart="11.5dp"
                    android:layout_marginTop="8dp"
                    android:textSize="14sp"/>

                <CheckBox
                    android:id="@+id/checkBox16"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:buttonTint="@color/colorPrimary"
                    android:text="  Work in the transport sector"
                    android:fontFamily="@font/attenroundnewbook"
                    android:layout_marginStart="11.5dp"
                    android:textSize="14sp"/>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="27.5dp"
                android:text="Travel record"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:fontFamily="@font/attenroundnewbook"
                android:textStyle="bold"
                android:layout_marginTop="31dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/rounded_corners"
                android:layout_marginStart="27dp"
                android:layout_marginEnd="26dp"
                android:layout_marginTop="5.5dp">

                <CheckBox
                    android:id="@+id/checkBox17"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:buttonTint="@color/colorPrimary"
                    android:text="  Have you recently travelled to a foreign  \n  countryÂ ?"
                    android:fontFamily="@font/attenroundnewbook"
                    android:layout_marginStart="11.5dp"
                    android:layout_marginTop="4.5dp"
                    android:layout_marginBottom="11.5dp"
                    android:textSize="14sp"/>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="27.5dp"
                android:text="If travelling from outside"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:fontFamily="@font/attenroundnewbook"
                android:textStyle="bold"
                android:layout_marginTop="22.5dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginStart="27dp"
                android:layout_marginTop="4.5dp"
                android:layout_marginEnd="26dp"
                android:layout_marginBottom="11dp"
                android:background="@drawable/rounded_corners"
                android:paddingStart="41dp"
                android:fontFamily="@font/attenroundnewbook"
                android:hint="@string/travel_city"
                android:inputType="text"
                android:textColor="@color/colorPrimary"
                android:textColorHint="@color/colorPrimary"
                android:textSize="14sp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginStart="27dp"
                android:layout_marginTop="4.5dp"
                android:layout_marginEnd="26dp"
                android:layout_marginBottom="11dp"
                android:background="@drawable/rounded_corners"
                android:paddingStart="41dp"
                android:fontFamily="@font/attenroundnewbook"
                android:hint="@string/travel_state"
                android:inputType="text"
                android:textColor="@color/colorPrimary"
                android:textColorHint="@color/colorPrimary"
                android:textSize="14sp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginStart="27dp"
                android:layout_marginTop="4.5dp"
                android:layout_marginBottom="11dp"
                android:layout_marginEnd="26dp"
                android:background="@drawable/rounded_corners"
                android:paddingStart="41dp"
                android:fontFamily="@font/attenroundnewbook"
                android:hint="@string/travel_country"
                android:inputType="text"
                android:textColor="@color/colorPrimary"
                android:textColorHint="@color/colorPrimary"
                android:textSize="14sp" />

            <Button
                android:id="@+id/covid19vaccineButton"
                android:layout_width="fill_parent"
                android:layout_height="56dp"
                android:layout_gravity="center|bottom"
                android:layout_marginTop="30dp"
                android:layout_marginStart="27dp"
                android:layout_marginEnd="26dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/rounded_corner_button"
                android:fontFamily="@font/attenroundnewbook"
                android:text="Next"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold" />


        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>